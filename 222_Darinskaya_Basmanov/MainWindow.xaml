<Window x:Class="_222_Darinskaya_Basmanov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_222_Darinskaya_Basmanov"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Calculator" Height="350" Width="400">
    <Grid Margin="0,0,0,-16">
        <TextBox Name="TextBox_X" ToolTip="Значение X" HorizontalAlignment="Left" Margin="96,123,0,0" TextWrapping="NoWrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox Name="TextBox_Y" ToolTip="Значение Y" HorizontalAlignment="Left" Margin="96,155,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="76,124,0,0" TextWrapping="Wrap" Text="X" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="76,157,0,0" TextWrapping="Wrap" Text="Y" VerticalAlignment="Top"/>
        <Image Source="/Image1.png" Margin="2,0,4,237"/>
        <RadioButton GroupName="FuncGroup" Name="RadioButton1" ToolTip="Выбрать sh(x)" Content="sh(x)" HorizontalAlignment="Left" Margin="76,187,0,0" VerticalAlignment="Top" IsChecked="True" Checked="RadioButton1_Checked"/>
        <RadioButton GroupName="FuncGroup" Name="RadioButton2" ToolTip="Выбрать x^2" Content="x^2" HorizontalAlignment="Left" Margin="76,208,0,0" VerticalAlignment="Top" Checked="RadioButton2_Checked"/>
        <RadioButton GroupName="FuncGroup" Name="RadioButton3" ToolTip="Выбрать e^x" Content="e^x" HorizontalAlignment="Left" Margin="76,230,0,0" VerticalAlignment="Top" Checked="RadioButton3_Checked"/>
        <Button Content="Вычислить" ToolTip="Вычислить уравнение" HorizontalAlignment="Left" Margin="222,190,0,0" VerticalAlignment="Top" Click="Calculate" Width="74"/>
        <Button Content="Очистить" ToolTip="Очистить все данные" HorizontalAlignment="Left" Margin="222,223,0,0" VerticalAlignment="Top" Click="Clear_All" Width="74"/>
        <TextBox Name="Result" ToolTip="Ответ" IsReadOnly="True" HorizontalAlignment="Left" Margin="98,262,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="198"/>
        <TextBlock HorizontalAlignment="Left" Margin="56,262,0,0" TextWrapping="Wrap" Text="Ответ" VerticalAlignment="Top"/>
    </Grid>
</Window>
